{% extends 'base.html.twig' %}


{% block title %}Catégories{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="jumbotron text-center">
    <h1>Toutes les catégories</h1>
</div>

<div class="container">
    <a href="{{ path( 'categoryAdd' ) }}" type="button" class="btn btn-success">Ajouter</a>

        {% for category in categories %}

            <h3>
                <a href="{{ path( 'categoryEdit', { 'id' : category.id } ) }}">{{ category.categoryName }}</a>
            </h3>
            <a href="{{ path( 'categoryDelete', { 'id' : category.id } ) }}" type="button" class="btn btn-danger">Supprimer</a>
            <br>
        {% endfor %}

<div/>
{% endblock %}
